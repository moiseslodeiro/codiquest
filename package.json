{
	"name": "codiquest",
	"version": "2.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently 'npm run watch:md' 'vite dev'",
		"watch:md": "chokidar 'docs/**/*.md' -c 'node tools/module.js {path}'",
		"build": "vite build -l error",
		"preview": "vite preview",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"convert": "node tools/convert.js",
		"publish:gh": "npm run build && npx gh-pages -d build -t -b live",
		"publish:prod": "NODE_ENV=docker npm run build && npx gh-pages -d build -f -b live",
		"newmodule": "node tools/newmodule.js",
		"test": "vitest run",
		"convert:all": "find src/raw -name \"*.questions.md\" -exec node tools/convert.js {} \\;",
		"module:all": "find src/raw -name \"*.module.md\" -exec node tools/module.js {} \\;",
    "clean:doc": "find docs -type f -name \"*.md\" -exec sh -c 'for f; do n=$(basename \"$f\" .md); [ \"$n\" = \"docs\" ] && continue; rm -rf \"src/modules/$n.js\" \"src/modules/$n\"; done; rm -rf \"src/modules/docs\"' sh {} +",
		"build:doc": "find docs -name \"*.md\" -exec node tools/module.js {} \\;"
  },
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.27.4",
		"@tailwindcss/typography": "^0.5.10",
		"@testing-library/svelte": "^5.2.8",
		"autoprefixer": "^10.4.16",
		"chokidar-cli": "^3.0.0",
		"concurrently": "^9.2.0",
		"daisyui": "^4.4.6",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.30.0",
		"glob": "^10.3.10",
		"jsdom": "^22.1.0",
		"postcss": "^8.4.31",
		"preline": "^2.0.2",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^4.2.7",
		"svelte-preprocess": "^5.1.1",
		"tailwindcss": "^3.3.5",
		"vite": "^4.4.2",
		"vitest": "^1.6.1"
	},
	"type": "module",
	"dependencies": {
		"@rollup/plugin-dynamic-import-vars": "^2.1.2",
		"gh-pages": "^6.1.1",
		"marked": "^12.0.0",
		"sanitize-html": "^2.17.0"
	}
}
